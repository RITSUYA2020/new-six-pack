<div class="wrap">
	<div class="container-fluid">
		<div class= "row">
			<div class="col-auto ml-1 mt-2 page-title">
				<h3>お問い合わせ</h3>
			</div>
		</div>
		<div class= "row justify-content-center">
			<div class="col-8 mt-3 no-gutters">
				<%= form_for(@contact, :url => contacts_thanks_path) do |f| %>
					<table class="table">
						<tr>
							<th>名前</th>
							<td>
								<%= f.hidden_field :name %>
								<%= @contact.name %>
							</td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td>
								<%= f.hidden_field :email %>
								<%= @contact.email %>
							</td>
						</tr>
						<tr>
							<th>お問い合わせ内容</th>
							<td>
								<%= f.hidden_field :message %>
								<%= @contact.message %>
							 </td>
						</tr>
					</table>

					<div class="text-center m-2">
						<%= f.submit '送信', :class => 'btn btn-outline-primary' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>