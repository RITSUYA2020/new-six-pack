<div class="wrap">
	<div class="container-fluid">
		<%= render 'layouts/flashes' %>
		<div class="row">
			<div class="col-auto ml-1 mt-2 admin-title">
				<h3>ランキング</h3>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-8">
				<table class="table">
		            <thead style="background-color: #f5f5f5;">
		            	<th>順位</th>
		            	<th>名前</th>
		            	<th>合計(分)</th>
		            </thead>
					<% @ranks.each.with_index(1) do |note, i| %>
						<tbody>
							<td>第<%= i %>位</td>
							<td><%= note.name %></td>
							<td><%= note.work_outs.sum(:time) %></td>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
