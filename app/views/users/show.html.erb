<div class="wrap">
	<div class="container-fluid">
		<%= render 'layouts/flashes' %>
		<div class= "row ml-1 mt-2">
			<h2>マイページ</h2>
		</div>
			<!--プロフィール-->
			<div class= "row justify-content-center">
				<!--ユーザー情報-->
				<div class="col-md-8 border">
					<div class="row  border-bottom" style="background-color: #f5f5f5;">
						<div class="col text-center">
							<%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: "jpeg", fallback: "no-image.jpg", class: "rounded-circle" %>
							<%= @user.name %>
						</div>
						<!--ログインが自分か他人か-->
						<div class="col text-center mt-4">
							<% if @user == current_user %>
								<%= link_to "プロフィール編集", edit_user_path(current_user) %>
							<% elsif @user != current_user %>
								<span id= "follow-button_#{@user.id}">
									<%= render 'users/follow-button', user: @user %>
								</span>
							<% end %>
						</div>
					</div>
					<div class="row my-3">
						<div class="col text-center">
							フォロワー<br>
							<span id="follower-count_#{@user.id}">
								<%= render 'users/follower-count', user: @user %>
							</span>
						</div>
						<div class="col text-center">
							フォロー中<br>
							<span id="following-count_#{@user.id}">
								<%= render 'users/following-count', user: @user %>
							</span>
						</div>
						<div class="col text-center">
							いいねした投稿<br>
							<span id="favorite-count_#{@user.id}">
								<%= render 'users/favorite-count', user: @user %>
							</span>
						</div>
					</div>
				</div>
			</div>

		<% @work_outs.each do |work_out| %>
			<div class= "row justify-content-center">
				<!-- work_out本体 -->
				<div class= "col-md-8  my-3 box border">
					<!-- ヘッダー -->
					<div class= "row justify-content-center border-bottom" style="background-color: #f5f5f5;">
						<div class="col-6 pl-0 align-self-center text-left">
							<%= link_to user_path(work_out.user) do %>
								<%= attachment_image_tag work_out.user, :profile_image, :fill, 63, 63, format: "jpeg", fallback: "no-image.jpg", class: "rounded-circle" %>
								<%= work_out.user.name %>
							<% end %>
						</div>
						<div class="col-4 pl-0 align-self-center text-right">
							<%= work_out.created_at.strftime("%Y/%m/%d %H:%M") %>
						</div>
					</div>

					<div class="row">
						<!-- 左半分 -->
						<div class="col-md-6 text-center pt-4">
							<%= attachment_image_tag work_out, :after_image, :fill, 150, 150, format: "jpeg", fallback: "no-image.jpg", size:'150x150', class: "rounded" %>
						</div>
						<!-- 右半分 -->
						<div class="col-md-6">
							<div class="row my-2 border-bottom">
								<!-- 筋トレの簡易情報について -->
								<div class="col-2">
									<i class="fas fa-stopwatch"></i>
								</div>
								<div class="col-10">
									<%= work_out.time %>分
								</div>
								<div class="col-2">
									<i class="fas fa-running"></i>
								</div>
								<div class="col-10">
									<%= work_out.muscle_group_i18n %>
								</div>
								<div class="col-2">
									<i class="fas fa-level-up-alt"></i>
								</div>
								<div class="col-10">
									<%= work_out.effect_i18n %>
								</div>
								<div class="col-2">
									<i class="fas fa-map-marker-alt"></i>
								</div>
								<div class="col-10">
									<%= work_out.place_i18n %>
								</div>
							</div>
							<div class="row mt-2">
								<!-- コメント -->
								<div class="col">
									<i class="fas fa-comment"></i>
									<%= work_out.comments.count %>
								</div>
								<!-- いいね -->
								<div class="col">
									<div id="favorite-<%= work_out.id %>">
										<%= render partial: 'favorites/favorite', locals: {work_out: work_out} %>
									</div>
								</div>
							</div>
							<div class="row -2">
								<!-- タグ -->
								<div class="col">
								</div>
							</div>
						</div>
						<div class="row my-3 mx-auto">
							<!-- 詳細ページへのボタン -->
							<div class="col-12 text-center">
								<%=link_to "Read More!", work_out_path(work_out), class: "btn btn-outline-secondary" %>
							</div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>

<% unless @user.id == current_user.id %>
	<% if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %>
		<% if @isRoom == true %>
			<p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
		<% else %>
			<%= form_for @room do |f| %>
				<%= fields_for @entry do |e| %>
					<%= e.hidden_field :user_id, value: @user.id %>
				<% end %>
				<%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
			<% end %>
		<% end %>
	<% end %>
<% end %>