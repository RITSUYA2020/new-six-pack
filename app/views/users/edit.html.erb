<div class="wrap">
	<div class="container-fluid">
		<%= render 'layouts/flashes' %>
		<div class= "row">
			<div class="col-auto ml-1 mt-2 page-title">
				<h3>プロフィール編集</h3>
			</div>
		</div>
		<div class= "row justify-content-center">
			<%=form_for(@user) do |f| %>
				<div class="col mt-3">
					<%= f.label :profile_image, "プロフィール画像" %><br>
					<%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: "jpeg", fallback: "no-image.jpg", size: '200x200', class: "rounded-circle ml-5" %><br>
					<%= f.attachment_field :profile_image, class: "mt-2" %>
				</div>
				<div class="col text-center mt-3">
					<%= f.label :name, "名前" %>
					<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
				</div>
				<div class="col text-center mt-3">
					<%= f.label :email, "メールアドレス" %>
					<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				</div>
				<div class="col text-center mt-3">
			    	<%= f.submit "編集内容を保存する", class: "btn btn-primary btn-sm mr-2" %>
			    	<%= link_to "退会する", users_confirm_path, class: "btn btn-danger btn-sm" %>
			  	</div>
			<% end %>
		</div>
	</div>
</div>

